<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="55dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recycler_home_left_listen_item_constrain_layout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/recycler_home_left_listen_text"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/recycler_home_left_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:src="@drawable/listen_wifi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/recycler_home_left_listen_item_constrain_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/recycler_home_left_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="晚安  >    "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/recycler_home_left_image_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/recycler_home_left_image_item_image_filter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/teal_700"
        app:roundPercent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="15dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/recycler_home_left_listen_item_constrain_layout"/>


</androidx.constraintlayout.widget.ConstraintLayout>